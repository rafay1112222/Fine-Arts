@model Institute_of_Fine_Arts.Models.Manager

@{
    ViewData["Title"] = "DeleteManager";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Delete Manager</h1>
            <p class="card-description">Are you sure you want to delete this?</p>
            <div class="row">
                <div class="col-md-6">
                    
                        <p class="text-warning">
                            @Html.DisplayNameFor(model => model.Username)
                        </p>
                    <p class="text-warning">
                            @Html.DisplayNameFor(model => model.Email)
                        </p>
                    <p class="text-warning">
                            @Html.DisplayNameFor(model => model.Password)
                        </p>
                    
                </div>
                <div class="col-md-6">

                    <p>
                        @Html.DisplayFor(model => model.Username)

                    </p>
                    <p>
                        @Html.DisplayFor(model => model.Email)

                    </p>
                    <p>
                        @Html.DisplayFor(model => model.Password)
                    </p>
                   
                </div>
                <div class="row mt-4">
                    <div class="col text-center">
                        <form asp-action="DeleteManager" class="d-inline-block">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-outline-danger mx-2" />
                        </form>
                        <a asp-action="ViewManager" class="btn btn-outline-info mx-2">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







