@model IEnumerable<Institute_of_Fine_Arts.Models.Submission>

@{
    ViewData["Title"] = "ViewSubmissions";
    Layout = "~/Views/Shared/StaffLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">View Submissions</h2>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ImageFilePath)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Status)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SubmissionDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Compet)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Std)
                                </th>
                                <th>
                                    Choose Winner
                                </th>
                                <th>
                                   Actions
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Html.DisplayFor(modelItem => item.ImageFilePath)" class="rounded-circle" height="65">
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Remarks)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubmissionDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Compet.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Std.StdName)
                                    </td>
                                    <td>
                                        <a class="btn btn-icon" asp-action="ChooseWinner" asp-route-id="@item.SubmissionId">
                                            <i class="mdi mdi-pencil-box-outline" style="font-size:20px; color:yellow;"></i>
                                            Choose
                                        </a>
                                        </td>
                                        <td>
                                        <div class="template-demo d-flex justify-content-between flex-nowrap">
                                            
                                            <a class="btn btn-icon" asp-action="Edit" asp-route-id="@item.SubmissionId">
                                                <i class="mdi mdi-pencil-box-outline" style="font-size:20px; color:green;"></i>
                                            </a>
                                            <a class="btn btn-icon" asp-action="Delete" asp-route-id="@item.SubmissionId">
                                                <i class="mdi mdi-delete-forever-outline" style="font-size:20px; color:red;"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>




