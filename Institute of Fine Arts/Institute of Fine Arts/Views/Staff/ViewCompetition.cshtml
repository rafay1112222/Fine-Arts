@model IEnumerable<Institute_of_Fine_Arts.Models.Competition>

@{
    ViewData["Title"] = "ViewCompetition";
    Layout = "~/Views/Shared/StaffLayout.cshtml";
}



        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Competitions</h2>
                        
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                                        <th>@Html.DisplayNameFor(model => model.ImageFilePath).</th>
                                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                                        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                        <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                                        <th>@Html.DisplayNameFor(model => model.Conditions)</th>
                                        <th>@Html.DisplayNameFor(model => model.AwardDetails)</th>

                                    </tr>
                                </thead>
                                <tbody>
                                   @foreach (var item in Model) {
        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                            <td><img src="@Html.DisplayFor(modelItem => item.ImageFilePath)" class="rounded-circle" height="65"></td>
                                            <td>@Html.DisplayFor(modelItem=>item.Description)</td>
                                            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Conditions)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AwardDetails)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Winner.StdName)
                                    </td>
                                    <td>
                                                <div class="template-demo d-flex justify-content-between flex-nowrap">
                                            <a class="btn btn-icon" asp-action="ViewSubmissions" asp-route-id="@item.CompetId">
                                                <i class="mdi mdi-pencil-box-outline" style="font-size:20px; color:yellow;"></i>
                                            </a>
                                                <a class="btn btn-icon" asp-action="EditCompetition" asp-route-id="@item.CompetId">
                                                    <i class="mdi mdi-pencil-box-outline" style="font-size:20px; color:green;"></i>
                                                </a>
                                                    <a class="btn btn-icon" asp-action="DeleteCompetition" asp-route-id="@item.CompetId">
                                                        <i class="mdi mdi-delete-forever-outline" style="font-size:20px; color:red;"></i>
                                                    </a>
                                                </div>
                                            </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div>
   



